<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_light"
    android:orientation="horizontal"
    tools:context=".AllFoodFragment">

    <TextView
        android:id="@+id/txt_allfood"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/green_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_juice"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/round_button"
        android:text="JUICE CALORIES"
        android:textSize="25sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_fruits"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/txt_allfood" />

    <Button
        android:id="@+id/btn_fruits"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/round_button"
        android:text="FRUITS CALORIES"
       app:layout_constraintHorizontal_bias="0.5"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/btn_juice"
        app:layout_constraintTop_toBottomOf="@id/txt_allfood"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_meat"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/round_button"
        android:text="MEAT CALORIES"
        android:textSize="25sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_salad"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/btn_juice" />

    <Button
        android:id="@+id/btn_salad"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/round_button"
        android:text="SALAD CALORIES"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@id/btn_meat"
        app:layout_constraintTop_toBottomOf="@id/btn_fruits"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>