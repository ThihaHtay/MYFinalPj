<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_shop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D5A20C">

            <ImageView
                android:id="@+id/image_fruit"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_margin="@dimen/dimen_8"
                />

            <TextView
                android:id="@+id/textFruitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Fruit Name"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:layout_constraintLeft_toRightOf="@id/image_fruit"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textFruitCalory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Fruit Category"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/textFruitName"
                app:layout_constraintLeft_toLeftOf="@id/textFruitName"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>